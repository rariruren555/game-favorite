.Header
  .Header-logo
    = link_to "Game Favorite", root_path
  .Search
    = form_with(url: search_posts_path, local: true, method: :get, class: "Search__contents") do |f|
      = f.text_field :keyword, placeholder: "ゲーム名,ハード名で投稿を検索する", class: "inputText"
      = f.submit "検索", class: "submitBtn"
  - if user_signed_in?
    .Header-user
      %ul.user-info
        %li
          %span
            = current_user.name
          = icon('fa', 'angle-down', class: "user-btn")
          %ul
            %li
              = link_to "マイページ", "/users/#{current_user.id}"
            %li
              = link_to "ログアウト", destroy_user_session_path, method: :delete
      = link_to "投稿する", new_post_path, class: 'btn'
  - else
    .Header-user
      = link_to "ログイン", new_user_session_path, class: 'btn'
      = link_to "新規登録", new_user_registration_path, class: 'btn'

