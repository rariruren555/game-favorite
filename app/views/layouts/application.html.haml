!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title GameFavorite
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .Header
      .Header-logo
        = link_to "Game Favorite", posts_index_path
      .Search
        %form.Search__contents
          %input.inputText{"placeholder": "投稿を検索する", "type": "text"}
          %input.submitBtn{"name": "commit", "type": "submit", "value": "検索🔍"}
      .Header-user
        = link_to "ログイン", posts_index_path, class: 'btn'
        = link_to "新規登録", posts_index_path, class: 'btn'
    = yield
